@model MasterDetailApp.Models.Order

@{
    ViewBag.Title = "Delete Order";
}

<h2>Delete Order</h2>

<h3>Are you sure you want to delete this order and its items?</h3>

<div>
    <h4>Order Info</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Customer Name</dt>
        <dd>@Model.CustomerName</dd>

        <dt>Order Date</dt>
        <dd>@Model.OrderDate.ToShortDateString()</dd>

        <dt>Paid</dt>
        <dd>@(Model.IsPaid ? "Yes" : "No")</dd>

        <dt>Image</dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <img src="@Model.ImagePath" width="100" />
            }
        </dd>
    </dl>

    @if (Model.Items != null && Model.Items.Any())
    {
        <h4>Order Items</h4>
        <table class="table table-bordered">
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price</td>
                </tr>
            }
        </table>
    }

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
    }
</div>
