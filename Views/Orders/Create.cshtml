@model MasterDetailApp.ViewModels.OrderViewModel

@{
    ViewBag.Title = "Create Order";
}

<h2 class="mb-4">Create Order</h2>

@using (Html.BeginForm("Create", "Orders", FormMethod.Post, new { enctype = "multipart/form-data", @class = "needs-validation", novalidate = "novalidate" }))
{
    @Html.AntiForgeryToken()

    <div class="row mb-3">
        <div class="col-md-6">
            @Html.LabelFor(m => m.Order.CustomerName, new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.Order.CustomerName, new { @class = "form-control", placeholder = "Enter customer name" })
            @Html.ValidationMessageFor(m => m.Order.CustomerName, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-6">
            @Html.LabelFor(m => m.Order.OrderDate, "Order Date", new { @class = "form-label fw-bold" })
            @Html.TextBoxFor(m => m.Order.OrderDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(m => m.Order.OrderDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="mb-3 form-check">
        @Html.CheckBoxFor(m => m.Order.IsPaid, new { @class = "form-check-input" })
        @Html.LabelFor(m => m.Order.IsPaid, new { @class = "form-check-label fw-bold" })
    </div>

    <div class="mb-4">
        @Html.Label("Order Image", new { @class = "form-label fw-bold" })
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <hr />
    <h4 class="mb-3">Order Items</h4>

    <div id="items">
        <div class="row g-2 item mb-2">
            <div class="col-md-4">
                <input name="Items[0].ProductName" class="form-control" placeholder="Product Name" required />
            </div>
            <div class="col-md-3">
                <input name="Items[0].Quantity" type="number" min="1" class="form-control" placeholder="Quantity" required />
            </div>
            <div class="col-md-3">
                <input name="Items[0].Price" type="number" step="0.01" class="form-control" placeholder="Price" required />
            </div>
            <div class="col-md-2 text-end">
                <button type="button" class="btn btn-danger remove-item w-100">Remove</button>
            </div>
        </div>
    </div>

    <button type="button" id="addItem" class="btn btn-outline-secondary mb-3">+ Add Another Item</button>

    <div class="mt-4">
        <input type="submit" value="Save Order" class="btn btn-primary me-2" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-outline-secondary" })
    </div>
}

@section scripts {
    <script>
        let index = 1;

        $("#addItem").click(function () {
            const html = `
                        <div class="row g-2 item mb-2">
                            <div class="col-md-4">
                                <input name="Items[${index}].ProductName" class="form-control" placeholder="Product Name" required />
                            </div>
                            <div class="col-md-3">
                                <input name="Items[${index}].Quantity" type="number" min="1" class="form-control" placeholder="Quantity" required />
                            </div>
                            <div class="col-md-3">
                                <input name="Items[${index}].Price" type="number" step="0.01" class="form-control" placeholder="Price" required />
                            </div>
                            <div class="col-md-2 text-end">
                                <button type="button" class="btn btn-danger remove-item w-100">Remove</button>
                            </div>
                        </div>`;
            $("#items").append(html);
            index++;
        });

        $(document).on("click", ".remove-item", function () {
            $(this).closest(".item").remove();
        });
    </script>
}
